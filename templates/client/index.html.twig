{% extends 'base.html.twig' %}

{% block title %}Gestion des clients{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Gestion des clients</h1>
        {% if has_privilege('CLIENT_MANAGE') %}
        <a href="{{ path('app_client_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau client
        </a>
        {% endif %}
    </div>

    {# Search and Filter Form #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label">Rechercher</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="{{ search }}" placeholder="Nom, code client, matricule fiscal...">
                </div>
                <div class="col-md-4">
                    <label for="active" class="form-label">Statut</label>
                    <select class="form-select" id="active" name="active">
                        <option value="all" {% if activeFilter == 'all' %}selected{% endif %}>Tous</option>
                        <option value="active" {% if activeFilter == 'active' %}selected{% endif %}>Actifs uniquement</option>
                        <option value="inactive" {% if activeFilter == 'inactive' %}selected{% endif %}>Inactifs uniquement</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="bi bi-search"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    {# Clients Table #}
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">Liste des clients ({{ clients|length }})</h5>
        </div>
        <div class="card-body p-0">
            {% if clients|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Matricule fiscal</th>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th class="text-center">Statut</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                        <tr>
                            <td><strong>{{ client.clientCode }}</strong></td>
                            <td><code>{{ client.matriculeFiscale }}</code></td>
                            <td>{{ client.name }}</td>
                            <td>
                                <small class="text-muted">{{ client.address|length > 50 ? client.address|slice(0, 50) ~ '...' : client.address }}</small>
                            </td>
                            <td class="text-center">
                                {% if client.active %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    {% if has_privilege('CLIENT_MANAGE') %}
                                    <a href="{{ path('app_client_edit', {'id': client.id}) }}" 
                                       class="btn btn-outline-primary" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_client_toggle', {'id': client.id}) }}" 
                                          style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ client.id) }}">
                                        <button type="submit" class="btn btn-outline-warning" 
                                                title="{{ client.active ? 'Désactiver' : 'Activer' }}">
                                            <i class="bi bi-{{ client.active ? 'toggle-on' : 'toggle-off' }}"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" 
                                          style="display: inline;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                    {% else %}
                                    <span class="text-muted">
                                        <i class="bi bi-eye"></i> Lecture seule
                                    </span>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">Aucun client trouvé</p>
                {% if has_privilege('CLIENT_MANAGE') %}
                <a href="{{ path('app_client_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Créer le premier client
                </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
