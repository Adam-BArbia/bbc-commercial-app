{% extends 'base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-box-seam"></i> Gestion des articles</h1>
        {% if has_privilege('ARTICLE_MANAGE') %}
        <a href="{{ path('app_article_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvel article
        </a>
        {% endif %}
    </div>

    {# Search and Filter Form #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label">Rechercher</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="{{ search }}" placeholder="Désignation, code article...">
                </div>
                <div class="col-md-4">
                    <label for="active" class="form-label">Statut</label>
                    <select class="form-select" id="active" name="active">
                        <option value="all" {% if activeFilter == 'all' %}selected{% endif %}>Tous</option>
                        <option value="active" {% if activeFilter == 'active' %}selected{% endif %}>Actifs uniquement</option>
                        <option value="inactive" {% if activeFilter == 'inactive' %}selected{% endif %}>Inactifs uniquement</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="bi bi-search"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    {# Articles Table #}
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">Liste des articles ({{ articles|length }})</h5>
        </div>
        <div class="card-body p-0">
            {% if articles|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Désignation</th>
                            <th class="text-center">Statut</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                        <tr>
                            <td><strong><code>{{ article.code }}</code></strong></td>
                            <td>{{ article.designation }}</td>
                            <td class="text-center">
                                {% if article.active %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    {% if has_privilege('ARTICLE_MANAGE') %}
                                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" 
                                       class="btn btn-outline-primary" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_article_toggle', {'id': article.id}) }}" 
                                          style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ article.id) }}">
                                        <button type="submit" class="btn btn-outline-warning" 
                                                title="{{ article.active ? 'Désactiver' : 'Activer' }}">
                                            <i class="bi bi-{{ article.active ? 'toggle-on' : 'toggle-off' }}"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" 
                                          style="display: inline;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                    {% else %}
                                    <span class="text-muted">
                                        <i class="bi bi-eye"></i> Lecture seule
                                    </span>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">Aucun article trouvé</p>
                {% if has_privilege('ARTICLE_MANAGE') %}
                <a href="{{ path('app_article_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Créer le premier article
                </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
