{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mot de passe{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="h3 mb-3"><i class="bi bi-key"></i> Réinitialiser le mot de passe</h1>
    <div class="card">
        <div class="card-body">
            <p class="text-muted">Utilisateur : <strong>{{ userEntity.name }}</strong> ({{ userEntity.email }})</p>
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-warning" type="submit">Réinitialiser</button>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">Retour</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
