{% extends 'base.html.twig' %}

{% block title %}Administration - Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0"><i class="bi bi-people"></i> Utilisateurs</h1>
        <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvel utilisateur
        </a>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-2">
                <div class="col-md-5">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher par nom ou email" value="{{ search }}">
                </div>
                <div class="col-md-3">
                    <select name="role" class="form-select">
                        <option value="0">Tous les rôles</option>
                        {% for role in roles %}
                            <option value="{{ role.id }}" {% if selectedRole == role.id %}selected{% endif %}>{{ role.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="active" class="form-select">
                        <option value="all" {% if activeFilter == 'all' %}selected{% endif %}>Tous les statuts</option>
                        <option value="active" {% if activeFilter == 'active' %}selected{% endif %}>Actifs uniquement</option>
                        <option value="inactive" {% if activeFilter == 'inactive' %}selected{% endif %}>Inactifs uniquement</option>
                    </select>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-outline-primary">Filtrer</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Rôle</th>
                        <th>Statut</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td><span class="badge bg-secondary">{{ user.role.name }}</span></td>
                            <td class="text-center">
                                {% if user.active %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('admin_user_edit', {id: user.id}) }}" 
                                       class="btn btn-outline-primary" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="{{ path('admin_user_reset_password', {id: user.id}) }}" 
                                       class="btn btn-outline-warning" title="Réinitialiser mot de passe">
                                        <i class="bi bi-key"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_user_toggle_active', {id: user.id}) }}" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle-user-' ~ user.id) }}">
                                        <button type="submit" class="btn btn-outline-{{ user.active ? 'secondary' : 'success' }}" 
                                                title="{{ user.active ? 'Désactiver' : 'Activer' }}">
                                            <i class="bi bi-{{ user.active ? 'toggle-on' : 'toggle-off' }}"></i>
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('admin_user_delete', {id: user.id}) }}" 
                                          style="display: inline;" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-user-' ~ user.id) }}">
                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">Aucun utilisateur trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
