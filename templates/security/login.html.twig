{% extends 'base.html.twig' %}

{% block title %}Connexion - BBC Commercial{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-3 fw-bold text-primary">
                            <i class="bi bi-box-seam fs-1"></i>
                            <br>
                            BBC Commercial
                        </h1>
                        <p class="text-muted">Système de gestion commerciale</p>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">
                                <i class="bi bi-envelope"></i> Adresse email
                            </label>
                            <input type="email" 
                                   value="{{ last_username }}" 
                                   name="_username" 
                                   id="inputEmail" 
                                   class="form-control form-control-lg" 
                                   autocomplete="email" 
                                   required 
                                   autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">
                                <i class="bi bi-lock"></i> Mot de passe
                            </label>
                            <input type="password" 
                                   name="_password" 
                                   id="inputPassword" 
                                   class="form-control form-control-lg" 
                                   autocomplete="current-password" 
                                   required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                            <label class="form-check-label" for="remember_me">
                                Se souvenir de moi
                            </label>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> Se connecter
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted">
                    © {{ 'now'|date('Y') }} BBC Commercial - Tous droits réservés
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
    }
</style>
{% endblock %}
